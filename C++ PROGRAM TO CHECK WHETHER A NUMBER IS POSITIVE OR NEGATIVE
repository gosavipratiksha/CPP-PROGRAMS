//WRITE A C++ PROGRAM TO CHECK WHETHER A NUMBER IS POSITIVE OR NEGATIVE
#include<iostream>
using namespace std;
int main()
{
	int num;
	cout<<"Enter a number: "<<num<<endl;
	cin>>num;
	if(num>=0)
	{
		cout<<num<<" is positive."<<endl;
	}
	else
	{
		cout<<num<<" is negative."<<endl;
	}
	return 0;

}
